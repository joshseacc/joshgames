        let currentQuestions = [];
        let currentIndex = 0;
        let score = 0;

        function startGame(mode) {
            document.getElementById('menu').style.display = 'none';
            document.getElementById('game').style.display = 'block';
            
            if (mode === 'test') {
                currentQuestions = [...questionsTest];
            } else {
                currentQuestions = [...questionsExam];
            }
            
            // æ´—ç‰Œ (Shuffle)
            currentQuestions.sort(() => Math.random() - 0.5);
            
            currentIndex = 0;
            score = 0;
            showQuestion();
        }

        function showQuestion() {
            if (currentIndex >= currentQuestions.length) {
                endGame();
                return;
            }

            const qData = currentQuestions[currentIndex];
            document.getElementById('question-box').innerText = qData.q;
            document.getElementById('score').innerText = `ç¬¬ ${currentIndex + 1} / ${currentQuestions.length} é¡Œ`;
            document.getElementById('feedback').innerText = "";

            const optionsDiv = document.getElementById('options-box');
            optionsDiv.innerHTML = "";
            
            qData.options.forEach(opt => {
                const btn = document.createElement('button');
                btn.className = 'option-btn';
                btn.innerText = opt;
                btn.onclick = () => checkAnswer(opt, qData.answer);
                optionsDiv.appendChild(btn);
            });
        }

        function checkAnswer(selected, correct) {
            const feedback = document.getElementById('feedback');
            if (selected === correct) {
                feedback.innerHTML = "<span class='correct'>âœ… ç­”å°äº†ï¼</span>";
                score++;
                setTimeout(() => {
                    currentIndex++;
                    showQuestion();
                }, 1000);
            } else {
                feedback.innerHTML = "<span class='wrong'>âŒ è©¦å¤šæ¬¡ï¼</span>";
            }
        }

        function endGame() {
            document.getElementById('question-box').innerText = "ğŸ‰ å®Œæˆäº†ï¼";
            document.getElementById('options-box').innerHTML = "";
            document.getElementById('feedback').innerHTML = `ä½ çš„å¾—åˆ†ï¼š${score} / ${currentQuestions.length}`;
        }

        function goBack() {
            document.getElementById('game').style.display = 'none';
            document.getElementById('menu').style.display = 'block';
        }
